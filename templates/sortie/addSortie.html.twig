{% extends 'base.html.twig' %}



{% block title %}{{parent()}} | Ajouter une Sortie{% endblock %}

{% block body %}
    {{ form_start(sortieForm) }}

    {{ form_row(sortieForm.nom) }}
    {{ form_row(sortieForm.infoSortie) }}
    {{ form_row(sortieForm.dateDebut) }}
    {{ form_row(sortieForm.dateLimite) }}
    {{ form_row(sortieForm.duree) }}
    {{ form_row(sortieForm.nbInscriptionMax) }}
    {{ form_row(sortieForm.ville) }}

    {{ form_row(sortieForm.lieu) }}
    {{ form_row(sortieForm.save) }}


    {{ form_end(sortieForm) }}

{% endblock %}
{% block javascripts %}
    <script>
        {#            permet d'attendre que le fichier soit chargé#}
        window.onload = () => {
            // on va chercher la ville
            let ville = document.querySelector("#ajout_sortie_ville");

            ville.addEventListener("change", function(){
                //fonction JS, permet d'aller chercher la balise form la plus proche de mon élément, dc le parent
                let form = this.closest("form");
                let data = this.name + "=" + this.value;
                // console.log(data);
                fetch(form.action,{
                    method: form.getAttribute("method"),
                    body: data,
                    headers: {
                        //on envoie nos données sous forme de query string : Clé = valeur
                        "Content-Type": "application/x-www-form-urlencoded; charset:UTF-8"

                    }
                })
                //on recoit la page en HTML
                    .then(response => response.text())
                    .then(html => {
                        let content = document.createElement("html");
                        content.innerHTML = html; //on pourra faire ensuite un query selector dessus
                        let nouveauSelect = content.querySelector("#ajout_sortie_lieu");
                        document.querySelector("#ajout_sortie_lieu").replaceWith(nouveauSelect);
                    })
                    .catch(error => {
                        console.log(error)
                    })
            });
        }
    </script>
{% endblock%}