{% extends 'base.html.twig' %}

{% block body %}

    {# supprime le contour des inputs #}
    <style>
        .form-control input {
            border: none;
            outline: none;
            box-shadow: none;
        }
    </style>

    <div class="text-white">

            <h2>Mise Ã  jour du profil</h2>

    {{ form_start(userForm) }}

    <div class="container">

                {{ form_row(userForm.pseudo) }}

                {{ form_label(userForm.nom) }}
                <div class="form-control">{{ form_widget(userForm.nom) }}</div>


                {{ form_label(userForm.prenom) }}
                <div class="form-control">{{ form_widget(userForm.prenom) }}</div>

                {{ form_label(userForm.telephone) }}
                <div class="form-control">{{ form_widget(userForm.telephone) }}</div>

                {{ form_label(userForm.mail) }}
                <div class="form-control">{{ form_widget(userForm.mail) }}</div>

                {{ form_widget(userForm.plainPassword) }}

                {{ form_label(userForm.campus) }}
                <div class="form-control">{{ form_widget(userForm.campus) }}</div>

                {{ form_label(userForm.photo) }}
                <div class="form-control">{{ form_widget(userForm.photo) }}</div>


            {% if is_granted('ROLE_ADMIN') %}

                    {{ form_label(userForm.actif) }}
                    <div class="form-control">
                        {{ form_widget(userForm.actif) }}
                    </div>


                    {{ form_label(userForm.administrateur) }}
                    <div class="form-control">
                        {{ form_widget(userForm.administrateur) }}
                    </div>

            {% endif %}

            <div>
               <button type="submit" class="btn btn-success mt-2">Enregistrer</button>
            </div>

    </div>



        {{ form_end(userForm) }}

{% endblock %}

